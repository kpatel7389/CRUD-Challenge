<h1>Log In</h1>

<ul>
  <% if @errors %>
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
  <% end %>
</ul>

<form action="/login" method="post">
  <label>Email:</label>
  <input type="text" name="email"><br>
  <label>Password:</label>
  <input type="password" name="password"><br>
  <input type="submit" value="Log In">
</form>